{
  "manifest_version": 3,
  "name": "Greenhouse Job Tracker",
  "version": "1.0.0",
  "description": "Track Greenhouse job applications to Google Sheets",
  "permissions": [
    "activeTab",
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://boards.greenhouse.io/*",
    "https://sheets.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://boards.greenhouse.io/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "oauth2": {
    "client_id": "887887626020-onbjor23n847c2e9m2gu09k84n55770t.apps.googleusercontent.com.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
